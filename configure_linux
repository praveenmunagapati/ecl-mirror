#!/bin/bash

host_config_opts="\
	--disable-longdouble \
	--enable-unicode=yes \
        --enable-boehm=included \
	--enable-threads=yes \
	--with-asdf=yes \
	--with-bytecmp=builtin \
	--with-cmp=builtin \
	--with-clx=no \
	--with-debug-cflags=yes \
	--with-defsystem=no \
	--with-fpe=yes \
	--with-profile=no \
	--with-rt=no \
	--with-serve-event=yes \
	--with-tcp=yes \
	--with-x=no \
	--with-dffi=no"


./configure $host_config_opts $*
